<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Color x:Key="SystemAccentColor">#6203c6</Color>
    <SolidColorBrush x:Key="SystemAccentBrush" Color="{StaticResource SystemAccentColor}"/>
    
    <SolidColorBrush x:Key="SystemAccentHoverBrush" Color="#7A1DDE"/>
    
    <SolidColorBrush x:Key="GlassSurfaceBrush" Color="#15FFFFFF"/>
    <SolidColorBrush x:Key="GlassSurfaceHoverBrush" Color="#25FFFFFF"/>
    <SolidColorBrush x:Key="GlassBorderBrush" Color="#30FFFFFF"/>
    
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#CCFFFFFF"/>
    
    <LinearGradientBrush x:Key="Brush.BackdropGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#00101018" Offset="0" />
        <GradientStop Color="#AA101018" Offset="1" />
    </LinearGradientBrush>
</ResourceDictionary>
